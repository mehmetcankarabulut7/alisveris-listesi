
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Bitirme_Proje.EntityFramework.Entities
@model List<Category>


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string mail = ViewBag.UserMail;
}

@section user_mail
{
    @mail
}

<table class="table table-bordered">
    <tr>
        <th>Category</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td><a href="/Category/Update/@item.Id" class="btn btn-success">Update</a></td>
            <td><a href="/Category/Delete/@item.Id" class="btn btn-danger">Delete</a></td>
        </tr>
     }
</table>
<a href="/Category/Add" class="btn btn-primary">New Category</a>
